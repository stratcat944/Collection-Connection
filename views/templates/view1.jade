div(class="container-fluid")

	div(class="row")

		div(class="col-md-12 text-center input-group input-group-md stage center-block")

			form(ng-submit="createArtistAlbum()")
				h3 Enter the Artist Name and Album Title.
				div(class="col-md-3")
				div(class="col-md-6")
					input(class="form-control text-center input" ng-model="artistAlbum.artistName" placeholder="Artist Name")
					input(class="form-control text-center input" ng-model="artistAlbum.albumName" placeholder="Album Title")
				div(class="col-md-3")
				div(class="col-md-12")
					button.btn.btn-default.btn-md.button(type='submit') Next