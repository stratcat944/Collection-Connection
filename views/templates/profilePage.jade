div.container-fluid

	div.albumContainer(ng-repeat="album in profile | limitTo: 1: page")

		div.row

			div.col-md-6.text-center.stage
				h3 Artist-{{album.artist}}

			div.col-md-6.text-center.stage
				h3 Album

		div.row

			div.col-md-4.text-center.border
				h4 Tracks
			div.col-md-4.text-center.border
				h4 Personnel
			div.col-md-4.text-center.border
				h4 Label
				br
				h4 Year

	button.btn(ng-click="prevRecord()") Previous
	button.btn(ng-click="nextRecord()") Next